" .vimrc
"   Init file for vim.
"
"  Leonardo Baloa, Ph.D., MBA
"

" -   Equivalent of :filetype-indent-on 
      filetype indent plugin on

" -  Set numbering 
     set number

" - Enable syntax highlighting
      syntax on

" - Smart search and ignore case
      set ignorecase
      set smartcase

" - Highlight search
      set hlsearch

" - Auto indent for files not identified by filetype
      set autoindent

" - Set ruler
      set ruler

" - Set laststatus
      set laststatus=2

" - Set visual bell
      set visualbell

" - Set mouse
      set mouse=a

" - Set tab for 2 spaces
      set shiftwidth=2
      set tabstop=2
      set expandtab
